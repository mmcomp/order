{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}

<div>
    <h1>Products</h1>
    <ul>
        {% for product in products %}
            <li>
            {{ product.name|e }}
            {% if product.getImagePath() %}
            <img src="{{ product.getImagePath() }}" style="height: 20px;" />
            {% endif %}
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
